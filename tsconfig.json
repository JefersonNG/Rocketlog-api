{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2024",
    "lib": ["ES2024"],
    "moduleResolution": "Bundler",
    "isolatedModules": true,

    "paths": {
      "@/*": ["./src/*"]
    },

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
